                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ListBox  x:Name="InvolvedMembers" ItemsSource="{Binding Members}" SelectionMode="Extended" Grid.Column="0" VerticalAlignment="Stretch"/>
