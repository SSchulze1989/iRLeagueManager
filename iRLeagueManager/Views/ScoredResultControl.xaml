                                                                 IconMargin="-5,-2,2,2"
                                                                 IconFill="{StaticResource ThemeColor_Back5}">
                                                <controls:IconButton.IconContent>
                                                    <Viewbox>
                                                        <ContentControl Content="{DynamicResource delete}"/>
                                                    </Viewbox>
