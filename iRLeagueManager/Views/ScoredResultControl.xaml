                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding FinalResults.Count}" Value="0">
