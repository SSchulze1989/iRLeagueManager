<UserControl x:Class="iRLeagueManager.Views.StandingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iRLeagueManager.Views"
             xmlns:vmodel="clr-namespace:iRLeagueManager.ViewModels"
             xmlns:model="clr-namespace:iRLeagueManager.Models.Results;assembly=DataManager"
             xmlns:enum="clr-namespace:iRLeagueManager.Enums;assembly=Communication"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White" FontSize="14">
    <UserControl.Resources>
        <model:StandingsModel x:Key="StandingsModel"/>
    </UserControl.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" ItemsSource="{Binding ScoringList}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DataGrid DataContext="{Binding Standings}" ItemsSource="{Binding StandingsRows}" AutoGenerateColumns="False" AlternationCount="2" AlternatingRowBackground="#F0F0F0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Pos.">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;-#;'-'})">
                                        <Binding Path="Position"/>
                                        <Binding Path="PositionChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Driver" Binding="{Binding Member.FullName}"/>
                            <DataGridTextColumn Header="Team" />
                            <DataGridTextColumn Header="Race Points">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;-#,'-'})">
                                        <Binding Path="RacePoints"/>
                                        <Binding Path="RacePointsChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Penalty">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:'-';-#;'-'})">
                                        <Binding Path="PenaltyPoints"/>
                                        <Binding Path="PenaltyPointsChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Tot.-Points">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;-#;'-'})">
                                        <Binding Path="TotalPoints" />
                                        <Binding Path="TotalPointsChange" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Races" Binding="{Binding RacesCounted}"/>
                            <DataGridTextColumn Header="Poles">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;'-';'-'})">
                                        <Binding Path="PolePositions"/>
                                        <Binding Path="PolePositionsChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Wins">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;'-';'-'})">
                                        <Binding Path="Wins"/>
                                        <Binding Path="WinsChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Podium" Binding="{Binding Top3}"/>
                            <DataGridTextColumn Header="Incidents">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} ({1:+#;'-';'-'})">
                                        <Binding Path="Incidents"/>
                                        <Binding Path="IncidentsChange"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
            <!--<TabItem Header="League Standings" DataContext="{Binding LeagueStandings}">
                <DataGrid ItemsSource="{Binding}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pos." Binding="{Binding}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>-->
        </TabControl>
    </Grid>
</UserControl>
